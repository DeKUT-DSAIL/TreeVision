#:kivy 2.1.0

<ThumbnailView>:
    on_release: root.controller.show_image(self)

    size_hint: .5, .4
    pos_hint: {"center_x": .5, "center_y": .5}

    canvas:
        Color:
            rgb: 1, 1, 1, 0
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]
            source: self.image_source
    canvas.after:
        Color:
            rgb: app.theme_cls.opposite_bg_normal
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
