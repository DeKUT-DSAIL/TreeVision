<ExtractScreenView>:
    image_plane: image_plane

    MDBoxLayout:
        size: root.size
        orientation: "vertical"
        MDBoxLayout:
            id: image_plane
            orientation: "horizontal"
            size_hint_y: 1

            # This canvas is a dark overlay over the images
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: (self.width, 0.2*self.height)

            # left and right images
            Image:
                source: "/home/cedric/kieni-species-annotation/13-03-2023/IMG_20230309_103936_RIGHT.jpg"
                size: self.texture_size
                allow_stretch: True
            Image:
                source: "/home/cedric/kieni-species-annotation/13-03-2023/IMG_20230309_103936_RIGHT.jpg"
                size: self.texture_size
                allow_stretch: True
                keep_ration: False
        # Configurations and logging
        MDBoxLayout:
            size_hint_y: None
            height: 0.05*self.parent.height
            padding: "10dp", "10dp"
            md_bg_color: app.theme_cls.primary_color
            MDLabel:
                text: "Configs"
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.5
            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.3
                padding: "10dp", "10dp"
                MDGridLayout:
                    cols: 2
                    size_hint_y: None
                    height: "30dp"
                    MDLabel:
                        text: "Project name: "
                        color: 0, 0, 0, 1
                    TextInput:
                        multiline: False
                MDGridLayout:
                    cols: 2
                    MDLabel:
                        text: "Upload:"
                    MDGridLayout:
                        cols: 2
                        MDLabel:
                            text: "Verify"
                        MDCheckbox:
                            id: verify
                            active: True
                MDGridLayout:
                    cols: 2
                    spacing: "0dp", "10dp"
                    MDLabel:
                        text: "Left Images:"
                    MDRectangleFlatIconButton:
                        id: left_select
                        text: "Load"
                        icon: "folder"
                        size_hint_x: 1
                        on_release: root.controller.file_manager_open('left')
                    MDLabel:
                        text: "Right Images:"
                    MDRectangleFlatIconButton:
                        id: right_select
                        text: "Load"
                        icon: "folder"
                        size_hint_x: 1
                        on_release: root.controller.file_manager_open('right')
            MDLabel:
                text: "Configurations"
                color: 0,0,0,1
                halign: "center"
                size_hint_x: 0.3
            MDLabel:
                text: "Logs"
                color: 0,0,0,1
                halign: "center"
        
        # This is the bottom strip
        MDBoxLayout:
            size_hint_y: 0.05
            pos_hint: {"x": self.x}
            md_bg_color: app.theme_cls.primary_dark
