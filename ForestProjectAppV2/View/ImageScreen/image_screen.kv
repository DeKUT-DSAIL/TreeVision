<ImageScreenView>:
    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_normal

        MDIconButton:
            icon: "chevron-left"
            x: "8dp"
            pos_hint: {'top': .99}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            md_bg_color: 0, 0, 0, .2
            on_release: root.controller.switch_screen('main-screen')

        ImageView:
            id: image_section

        MDIconButton:
            icon: "chevron-left"
            x: "8dp"
            pos_hint: {'center_x': .2, 'center_y': .6}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            md_bg_color: 0, 0, 0, .2
            on_release: root.controller.next_image(image_section, image_section.image_source)

        MDIconButton:
            icon: "chevron-right"
            x: "8dp"
            pos_hint: {'center_x': .8, 'center_y': .6}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_release: root.controller.next_image(image_section, image_section.image_source)

    MDFloatingActionButtonSpeedDial:
        id: speed_dial
        pos_hint: {'center_x': .7, 'center_y': .2}
        hint_animation: True
        bg_hint_color: app.theme_cls.primary_dark
        data: root.controller.speed_dial_data
        icon: "menu"
        font_name: "Inter"
